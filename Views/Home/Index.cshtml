@model List<ConvertJob>

@{
    ViewData["Title"] = "Görevler";
}
<h1 class="h4">Görevler</h1>

<div class="row">

    <div class="col-12">
        <a class="btn btn-outline-primary btn-sm float-end" asp-controller="Home" asp-action="NewTask">Yeni İşlem</a>
    </div>
    <table class="table table-sm table-condensed">



        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                    <td>@item.Status</td>
                    <td> <a class="text-success" asp-action="DownloadFile" asp-route-filename="@item.FileAnlageXls">@item.FileAnlageXls</a></td>
                    <td> <a class="text-success" asp-action="DownloadFile" asp-route-filename="@item.FileVorlageXls">@item.FileVorlageXls</a></td>
                    <td>@item.ResultPdf</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a class="btn btn-outline-primary me-1">İşlem</a>
                            <a class="btn btn-outline-danger me-1">İşlem 2</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>